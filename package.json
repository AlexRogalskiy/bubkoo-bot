{
  "name": "x6-bot",
  "version": "1.0.0",
  "private": true,
  "description": "A github app for x6",
  "main": "./lib/index.js",
  "repository": "https://github.com/bubkoo/x6-bot.git",
  "homepage": "https://github.com/bubkoo/x6-bot",
  "bugs": "https://github.com/bubkoo/x6-bot/issues",
  "keywords": [
    "robot",
    "x6"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "probot run ./lib/app.js",
    "test": "jest",
    "prebuild": "run-s lint clean",
    "precommit": "lint-staged"
  },
  "author": "bubkoo <bubkoo.wy@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.20",
    "probot": "^10.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.9",
    "@types/lodash": "^4.14.161",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/parser": "^3.9.0",
    "devmoji": "^2.1.9",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^4.3.0",
    "jest": "^26.4.0",
    "lint-staged": "^10.3.0",
    "nock": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "rimraf": "^3.0.2",
    "smee-client": "^1.1.0",
    "ts-jest": "^26.2.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "devmoji -e --lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn precommit"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€” staged"
    ],
    "src/**/*.ts": [
      "tslint -c tslint.json -p ./tsconfig.json --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
